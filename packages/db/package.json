{
  "name": "@school-analytics/db",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./client": {
      "types": "./src/generated/client/index.d.ts",
      "default": "./src/generated/client/index.js"
    },
    "./server": {
      "types": "./server.d.ts",
      "default": "./server.js"
    },
    "./prisma/schema": "./prisma/schema.prisma"
  },
  "scripts": {
    "postinstall": "npm run prisma:generate",
    "prisma:generate": "prisma generate --schema ./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --force --schema ./prisma/schema.prisma",
    "prisma:studio": "prisma studio --hostname 0.0.0.0 --port 5555",
    "db:seed": "node ./prisma/seed.js"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "prisma": "^7.3.0"
  }
}
