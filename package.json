{
  "name": "school-analytics-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace @school-analytics/web",
    "dev:web": "npm run dev --workspace @school-analytics/web",
    "dev:worker": "npm run dev --workspace @school-analytics/worker",
    "dev:scheduler": "npm run dev --workspace @school-analytics/scheduler",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace @school-analytics/web",
    "start:web": "npm run start --workspace @school-analytics/web",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "prisma:generate": "npm run prisma:generate --workspace @school-analytics/db",
    "prisma:migrate": "npm run prisma:migrate --workspace @school-analytics/db",
    "prisma:reset": "npm run prisma:reset --workspace @school-analytics/db",
    "prisma:studio": "npm run prisma:studio --workspace @school-analytics/db",
    "db:migrate:historical": "npm run historical:migrate --workspace @school-analytics/scheduler && npm run historical:migrate --workspace @school-analytics/worker",
    "db:seed": "npm run db:seed --workspace @school-analytics/db",
    "docker:dev": "./scripts/docker-dev-up.sh",
    "docker:prod": "./scripts/docker-prod-up.sh",
    "docker:migrate": "./scripts/docker-migrate.sh",
    "docker:generate": "./scripts/docker-generate.sh",
    "docker:reset": "./scripts/docker-reset.sh",
    "docker:studio": "./scripts/docker-studio.sh",
    "docker:migrate:historical": "./scripts/docker-historical-migrate.sh",
    "docker:seed": "./scripts/docker-seed.sh",
    "docker:down": "./scripts/docker-down.sh",
    "docker:logs": "./scripts/docker-logs.sh",
    "docker:watch": "./scripts/docker-watch.sh",
    "docker:infisical:up": "./scripts/docker-infisical-up.sh",
    "docker:infisical:runtime": "./scripts/docker-infisical-runtime-up.sh",
    "docker:infisical:migrate": "./scripts/docker-infisical-migrate.sh",
    "docker:infisical:seed": "./scripts/docker-infisical-seed.sh"
  }
}
